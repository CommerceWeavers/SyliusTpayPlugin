{
    "name": "commerce-weavers/sylius-tpay-plugin",
    "description": "Tpay integration for Sylius",
    "type": "sylius-plugin",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CommerceWeavers\\SyliusTpayPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\CommerceWeavers\\SyliusTpayPlugin\\": "tests/",
            "App\\": "tests/Application/src/"
        }
    },
    "require": {
        "php": "^8.1",
        "defuse/php-encryption": "^2.4",
        "payum/core": "^1.7",
        "sylius/core-bundle": "^1.12",
        "sylius/resource-bundle": "^1.10",
        "symfony/config": "5.4.* || ^6.0",
        "symfony/dependency-injection": "5.4.* || ^6.0",
        "symfony/form": "5.4.* || ^6.0",
        "symfony/http-foundation": "5.4.* || ^6.0",
        "symfony/http-kernel": "5.4.* || ^6.0",
        "symfony/routing": "5.4.* || ^6.0",
        "tpay-com/tpay-openapi-php": "^1.8"
    },
    "conflict": {
        "sylius/sylius": "<1.12"
    },
    "require-dev": {
        "coduo/php-matcher": "^6.0",
        "dbrekelmans/bdi": "^1.3",
        "lchrusciel/api-test-case": "^5.3",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.8.1",
        "phpstan/phpstan-doctrine": "1.3.37",
        "phpstan/phpstan-strict-rules": "^1.3.0",
        "phpstan/phpstan-webmozart-assert": "^1.2.0",
        "phpunit/phpunit": "^9.5",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "shipmonk/composer-dependency-analyser": "^1.7",
        "sylius-labs/coding-standard": "^4.2",
        "sylius/sylius": "^1.12",
        "symfony/browser-kit": "^5.4 || ^6.0",
        "symfony/debug-bundle": "^5.4 || ^6.0",
        "symfony/dotenv": "^5.4 || ^6.0",
        "symfony/flex": "^2.4",
        "symfony/intl": "^5.4 || ^6.0",
        "symfony/monolog-bundle": "^3.10",
        "symfony/panther": "^2.1",
        "symfony/runtime": "5.4.* || ^6.0",
        "symfony/web-profiler-bundle": "^5.4 || ^6.0",
        "theofidry/alice-data-fixtures": "^1.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "symfony": {
            "require": "5.4.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        }
    }
}
