<div class="ui stackable grid">
    <div class="column" id="sylius-payments">
        {% set payment = order.lastPayment('cart') %}

        <div class="ui small icon message">
            <i class="payment icon"></i>
            <div class="content">
                <div class="field">
                    {{ form_row(form.tpay.card.holder_name) }}
                </div>
                <div class="field">
                    {{ form_row(form.tpay.card.number) }}
                </div>
                <div class="fields">
                    <div class="six wide field">
                        {{ form_row(form.tpay.card.cvv) }}
                    </div>
                    <div class="twelve wide field">
                        <div class="two fields">
                            {{ form_row(form.tpay.card.expiration_date_month) }}
                            {{ form_row(form.tpay.card.expiration_date_year) }}
                        </div>
                    </div>
                </div>
                {{ form_row(form.tpay.card.card) }}
            </div>
        </div>
    </div>
</div>
