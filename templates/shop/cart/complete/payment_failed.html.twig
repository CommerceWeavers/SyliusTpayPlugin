{% extends '@SyliusShop/shared/layout/base.html.twig' %}

{% block title %}{{ 'commerce_weavers_sylius_tpay.shop.payment_failed.title'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-danger mx-auto">
                    {{ errorMessage ?? 'commerce_weavers_sylius_tpay.shop.payment_failed.error'|trans }}
                </div>

                <div class="mb-4">
                    <i class="fas fa-times-circle text-danger display-1 mb-3"></i>
                    <h1 class="display-4 mb-2">
                        {{ 'commerce_weavers_sylius_tpay.shop.payment_failed.title'|trans }}
                    </h1>
                    <p class="lead text-muted">
                        {{ 'commerce_weavers_sylius_tpay.shop.payment_failed.subtitle'|trans }}
                    </p>
                </div>

                <div class="mt-4">
                    <a href="{{ path('sylius_shop_order_show', {'tokenValue': order.tokenValue}) }}" class="btn btn-primary">
                        <i class="fas fa-undo me-2"></i>{{ 'commerce_weavers_sylius_tpay.shop.payment_failed.retry_payment'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
