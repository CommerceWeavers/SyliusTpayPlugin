<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns="https://api-platform.com/schema/metadata/resources-3.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata/resources-3.0 
                              https://api-platform.com/schema/metadata/resources-3.0.xsd">

    <resource class="%commerce_weavers_sylius_tpay.model.credit_card.class%">
        <operations>
            <operation name="shop_get_collection" 
                       class="ApiPlatform\Metadata\GetCollection" 
                       uriTemplate="/shop/credit-cards">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>commerce_weavers_sylius_tpay:shop:credit_card:index</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>
            
            <operation name="shop_get_item" 
                       class="ApiPlatform\Metadata\Get" 
                       uriTemplate="/shop/credit-cards/{id}">
                <normalizationContext>
                    <values>
                        <value name="groups">
                            <values>
                                <value>commerce_weavers_sylius_tpay:shop:credit_card:show</value>
                            </values>
                        </value>
                    </values>
                </normalizationContext>
            </operation>
            
            <operation name="shop_delete" 
                       class="ApiPlatform\Metadata\Delete" 
                       uriTemplate="/shop/credit-cards/{id}"/>
        </operations>
    </resource>
</resources>